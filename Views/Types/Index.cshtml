@{
  Layout = "_Layout";
}

@using Animal_Shelter.Models;

<h1>Types</h1>

@if (@Model.Count == 0)
{
  <h3>No Types have been added yet!</h3>
} 

<ul>
  @foreach(Type type in Model)
  {
    <li>@Html.ActionLink($"{type.Name}", "Details", new { id = type.TypeId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new type", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>